{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@component": ["./src/components"],
      "@data": ["./src/data"],
      "@screens": ["./src/screens"],
      "@store": ["./src/store"],
      "@styles": ["./src/styles"],
      "@types": ["./src/types"]
    }
  },
  "typeRoots": ["./src/types"],
  "extends": "expo/tsconfig.base"
}
